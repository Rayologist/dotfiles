#!/usr/bin/env zsh

config_file="$HOME/.config/tmux/bin/paths.zsh"

if [[ -f "$config_file" ]]; then
    source "$config_file"
else
    echo "Error: config file not found: $config_file" >&2
    read -k 1 -s "?Press any key to exit..."
    exit 1
fi

switch_to() {
    if [[ -z $TMUX ]]; then
        tmux attach-session -t $1
    else
        tmux switch-client -t $1
    fi
}

has_session() {
    tmux list-sessions | grep -q "^$1:"
}

hydrate() {
    if [ -f $2/.tmux-sessionizer ]; then
        tmux send-keys -t $1 "source $2/.tmux-sessionizer" c-M
    elif [ -f $HOME/.tmux-sessionizer ]; then
        tmux send-keys -t $1 "source $HOME/.tmux-sessionizer" c-M
    fi
}

if [[ $# -eq 1 ]]; then
    selected=$1
else
  if (( ${#exclude_paths[@]} > 0 )); then
    selected=$(
      find "${search_paths[@]}" -mindepth 1 -maxdepth 1 -type d \
      | grep -vFf <(printf "%s\n" "${exclude_paths[@]}") \
      | cat - <(printf "%s\n" "${append_paths[@]}") - \
      | fzf
    )
  else
    selected=$(
      find "${search_paths[@]}" -mindepth 1 -maxdepth 1 -type d \
      | cat - <(printf "%s\n" "${append_paths[@]}") - \
      | fzf
  )
fi
fi

if [[ -z $selected ]]; then
    exit 0
fi

selected_name=$(basename "$selected" | tr . _)
tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
    tmux new-session -s $selected_name -c $selected
    hydrate $selected_name $selected
    exit 0
fi

if ! has_session $selected_name; then
    tmux new-session -ds $selected_name -c $selected
    hydrate $selected_name $selected
fi

switch_to $selected_name
